<div class="container">
  <div class="row">
    <div class="col-sm-8 col-xs-12">
      <div class="cards-container">
        <%= form_tag flats_path, method: :get do %>
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Find a flat" %>
        <%= submit_tag("Find") %>
        <% end %>
      </div>
      <div id="search-results">
        <%= render 'flats/search', flats: @flats %>
      </div>
    </div>


    <div class="col-sm-4 col-xs-12">
      <div id="map-input">
        <%= render 'flats/maps', markers: @markers %>
      </div>
    </div>
  </div>
</div>

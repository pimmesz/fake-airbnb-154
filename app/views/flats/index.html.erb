<div class="container">
  <div class="row">
    <%= form_tag flats_path, method: :get, remote: true do %>
    <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Find a flat" %>
    <%= submit_tag("Find") %>
    <% end %>
  </div>

  <div class="row" id="search-results">
    <%= render 'flats/search', flats: @flats %>
  </div>

  <div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>"
  ></div>

</div>
